// teachings-data.js (JSON-only)
// Loads from /teachings/teachings.json

export async function fetchTeachingsWithFallback() {
  const res = await fetch('./teachings.json', { cache: 'no-cache' });
  if (!res.ok) throw new Error(`JSON fetch failed: ${res.status}`);
  const data = await res.json();
  // Expecting shape: { "version": "v1", "teachings": [ ... ] }
  return Array.isArray(data?.teachings) ? data.teachings : [];
}
